<!-- Search bar -->
<%= form_for :search, :url => search_url, :html => { :method => :get } do %>
    <%= text_field_tag :query, params[:query], placeholder: "Search for..." %>
    <%= submit_tag "search", class: "btn btn-default" %>
    <% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Location</th>
      <th>Profile</th>
      <th>Reviews</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
<div class="results">
<tbody>
<% @users.each do |user| %>
  <%if user.reviews.blank?
       avg_review = 0
      else
       avg_review = user.reviews.average(:rating).round(2)
    end %>
    
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></dtd>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.zipcode %></td>
        <td><%= link_to "Profile", user_path(user.username), :"data-no-turbolink" => true %></td>
        <td class="average-review-rating" data-score=<%= avg_review %>></td>
        <% if logged_in? %>
          <% if user.id != current_user.id %>
            <td><%= link_to 'Message', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

<!-- Script tag for raty.js for User's average rating-->
<script>
  $('.average-review-rating').raty({
		readOnly: true,
		path: '/assets/',
		score: function() {
			return $(this).attr('data-score')
		}
	});
</script>