      <div class="col s8">
          <div class="card back blue lighten-2">
            <div class="card-content black-text">
              <%= image_tag @user.picture.url if @user.picture? %>
              <%= image_tag "profile.jpg" if not @user.picture? %>
              <h4><%= @user.first_name %> <%= @user.last_name %></h4>
              <span class="card-title"><i class="fa fa-user" aria-hidden="true"></i> About Me</span>
              <h5 class="right"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</h5>
              <p><%= @user.description %></p>
              <h5>Contact Details: </h5>
              <h6><i class="fa fa-map-marker" aria-hidden="true"></i> <%= @user.zipcode %> </h6>
            </div>
        </div>
      </div>
      
            <h3 class="center">Projects</h3>
            <div class="row">
                <table>
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Languages</th>
                      <th>Job type</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>
                
                  <tbody>
                    <% @listings.each do |listing| %>
                      <tr>
                        <%if on_profile?(@user,listing) %>
                          <td><%= listing.name %></td>
                          <td><%= listing.description %></td>
                          <td><%= listing.languages %></td>
                          <td><%= listing.job_type %></td>
                          <td><%= link_to 'Show', listing %></td>
                          <% if logged_in? %>
                            <% if is_owner?(listing) %>
                              <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
                              <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                            <% end %>
                          <% end %>
                        <% end %>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
         
</html>
   
   
   
  